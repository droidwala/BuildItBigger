<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RandomFragment"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textview_main_askquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/main_screen_joke_question"
        android:textSize="@dimen/title_text_sizes"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_main_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yes_for_joke_back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/main_button_margins"
        android:layout_marginStart="@dimen/main_button_margins"
        android:padding="@dimen/main_button_padding"
        android:text="@string/main_button_yes_for_joke"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_main_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/no_for_joke_back"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/main_button_margins"
        android:layout_marginEnd="@dimen/main_button_margins"
        android:padding="@dimen/main_button_padding"
        android:text="@string/main_button_no_for_joke"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/progress_bar_width_height"
        android:layout_height="@dimen/progress_bar_width_height"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="@style/Widget.AppCompat.ProgressBar"
        tools:visibility="visible"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
